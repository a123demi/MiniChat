<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/app_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edeee9"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical" >

        <com.lming.minichat.customview.CustomClearEditText
            android:id="@+id/main_user_search_custom_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/search_edit_text_bg"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="8dp"
            android:hint="搜索"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:singleLine="true"
            android:textSize="15.0dip" />
    </LinearLayout>

    <!-- 当没有查到到相关信息，给出提示 -->
    <TextView
        android:id="@+id/main_user_none_tip_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#4a4f55"
        android:textSize="16sp" 
        android:text="未查询到相关信息"
        android:paddingLeft="10dp"
        android:visibility="gone"
        />
    <ExpandableListView
        android:id="@+id/main_user_elv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/register_backgroud"
        />

</LinearLayout>
