<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/msg_lv_header_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp" 
        android:src="@drawable/msg_header"
        />
    
    <LinearLayout
        android:id="@+id/msg_lv_content_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/msg_lv_header_iv"
        android:background="@drawable/message_receive_msg_selector" 
        android:gravity="left" >

          <ImageView
            android:id="@+id/msg_lv_image_tv"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:contentDescription="@string/add_image"
            android:gravity="center"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/msg_lv_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111111111"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>